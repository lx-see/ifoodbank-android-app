<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:clickable="true"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/item_request_food_background"
                android:id="@+id/parent_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_store" />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/image"
                  android:orientation="vertical"
                  android:layout_centerVertical="true"
                  android:id="@+id/name_location">
        <TextView
                android:id="@+id/foodbank_name"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="Food Bank A"
                android:textColor="#F25278"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/foodbank_location"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="No 10, Jalan ...."
                android:ellipsize="end"
                android:textColor="#60767F"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/food_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20pax/week"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#F25278"
            android:layout_toRightOf="@+id/name_location"
            android:gravity="right"
            android:textSize="20sp"/>

</RelativeLayout>