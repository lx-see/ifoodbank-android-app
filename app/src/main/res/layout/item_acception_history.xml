<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
            android:layout_width="5sp"
            android:layout_height="70sp"
            android:layout_gravity="right"
            android:layout_marginLeft="20sp"
            android:src="@drawable/btn_left_pink" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="70sp"
                  android:background="@drawable/item_request_food_background"
                  android:layout_marginBottom="15sp"
                  android:layout_marginRight="20sp"
                  android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/acception_date"
                      android:layout_marginTop="8sp"
                      android:layout_marginBottom="2sp"
                      android:text="20/11/2021"
                      android:textColor="#F25278"
                      android:textSize="14sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/foodbank_name"
                      android:maxWidth="200sp"
                      android:text="Food Bank A"
                      android:textColor="#50D3EB"
                      android:textSize="10sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/food_collected"
                      android:maxWidth="200sp"
                      android:text="Food Collected: xxx, xxx, xxx..."
                      android:textColor="#50D3EB"
                      android:textSize="10sp"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
