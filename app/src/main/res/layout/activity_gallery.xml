<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#B2F2F4"
              android:weightSum="100">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="#B2F2F4"
                android:fillViewport="true">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="25dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:padding="10sp"
                      android:orientation="vertical">

            <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/gradient1"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_store"/>

            <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:layout_marginLeft="10dp"
                    android:text="Name"
                    android:textSize="28sp"
                    android:textColor="#F25278"/>

            <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Food Information"
                    android:textSize="20sp"
                    android:textColor="#50D3EB"/>

            <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="#60767F"
                    android:id="@+id/desc"
                    android:text="100 plus, mineral water"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="#60767F"
                    android:id="@+id/halal"
                    android:text="HALAL / 300 Pax Available"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Contact Way"
                    android:textSize="20sp"
                    android:textColor="#50D3EB"/>

            <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="#60767F"
                    android:id="@+id/contact"
                    android:text="03-62573447"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="#60767F"
                    android:id="@+id/email"
                    android:text="majipan125@gmail.com"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textColor="#60767F"
                    android:textSize="15sp"
                    android:id="@+id/address"
                    android:text="10 KOMPLEK MUTIARA JLN BATU 3 1/2 Wilayah Persekutuan, Ipoh"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btn_go_google_maps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/btn_login_submit"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="View google maps"
                    android:textColor="#F25278"
                    android:textSize="18sp"
                    android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </ScrollView>
</LinearLayout>